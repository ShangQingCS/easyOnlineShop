<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="cn.sqkj.nsyl.userManager.pojo.NsUser" table="ns_user">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="user_name" type="java.lang.String">
            <column name="user_name" length="50" />
        </property>
        <property name="nick_name" type="java.lang.String">
            <column name="nick_name" length="50" />
        </property>
        <property name="true_name" type="java.lang.String">
            <column name="true_name" length="50" />
        </property>
        
        <property name="login_pwd" type="java.lang.String">
            <column name="login_pwd" length="50"  />
        </property>
        <property name="pay_pwd" type="java.lang.String">
            <column name="pay_pwd" length="50" />
        </property>
        <property name="user_grade" type="java.lang.Long">
            <column name="user_grade" />
        </property>
        <property name="user_phone" type="java.lang.String">
            <column name="user_phone" length="15" />
        </property>
        <property name="user_mail" type="java.lang.String">
            <column name="user_mail" length="15" />
        </property>
        <property name="user_sex" type="java.lang.String">
            <column name="user_sex" length="1" />
        </property>
        <property name="identity_card" type="java.lang.String">
            <column name="identity_card" length="50" />
        </property>
        <property name="identity_card_validity" type="java.util.Date">
            <column name="identity_card_validity"  />
        </property>
        <property name="identity_issuing" type="java.lang.String">
            <column name="identity_issuing" length="255" />
        </property>
        <property name="identity_status" type="java.lang.String">
            <column name="identity_status" length="1"  />
        </property>
        <property name="user_ky_balance" type="java.lang.Double">
            <column name="user_ky_balance" precision="2" />
        </property>
        <property name="user_fx_balance" type="java.lang.Double">
            <column name="user_fx_balance" precision="2" />
        </property>
        <property name="user_dj_balance" type="java.lang.Double">
            <column name="user_dj_balance" precision="2" />
        </property>
        <property name="tixian_status" type="java.lang.String">
            <column name="tixian_status" length="1" />
        </property>
        <property name="user_jf_balance" type="java.lang.Double">
            <column name="user_jf_balance" precision="2"  />
        </property>
        <property name="create_time" type="java.util.Date">
            <column name="create_time"  />
        </property>
        <property name="option_time" type="java.util.Date">
            <column name="option_time"  />
        </property>
        <property name="user_status" type="java.lang.String">
            <column name="user_status" length="1" />
        </property>
        <property name="user_pid" type="java.lang.Long">
            <column name="user_pid" length="20" />
        </property>
        <property name="option_remark" type="java.lang.String">
            <column name="option_remark" length="2000" />
        </property>
        
    </class>
</hibernate-mapping>
